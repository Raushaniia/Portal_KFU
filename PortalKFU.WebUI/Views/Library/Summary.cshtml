@model PortalKFU.Domain.Entities.Library

<div class="navbar-right">
    @Html.ActionLink("Загрузить статью", "Download", "Library",
    new { returnUrl = Request.Url.PathAndQuery },
    new { @class = "btn btn-default navbar-btn" })
</div>
<div class="navbar-right">
    @Html.ActionLink("Войти", "Login", "Account",
    new { returnUrl = Request.Url.PathAndQuery },
    new { @class = "btn btn-default navbar-btn" })
</div>
<div class="navbar-right">
    @Html.ActionLink("Регистрация", "Register", "Account",
    new { returnUrl = Request.Url.PathAndQuery },
    new { @class = "btn btn-default navbar-btn" })
</div>

<div class="navbar-text navbar-right">
    <b>Ваша библиотека:</b>
    @Model.Lines.Sum(x => x.Quantity) книг,
    @Model.ComputeTotalValue().ToString("# руб")
</div>
